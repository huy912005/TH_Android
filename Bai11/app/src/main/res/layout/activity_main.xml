<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F7"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Phạm Minh Huy 23115053122314"
        android:textSize="20sp"
        android:textColor="#333333"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp" /> <TextView
    android:id="@+id/number_display"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/info_text" android:layout_marginBottom="32dp"
    android:background="@drawable/rounded_text_view_bg"
    android:gravity="center"
    android:padding="16dp"
    android:textAlignment="center"
    android:textColor="#333333"
    android:textSize="30sp"
    android:textStyle="bold"
    android:hint="Nhập số ..."
    android:textColorHint="#AAAAAA" />

    <TableLayout
        android:id="@+id/keypad_layout"
        android:layout_below="@id/number_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginTop="16dp">

        <TableRow android:gravity="center">
            <Button
                android:id="@+id/button1"
                style="@style/DialerButtonStyle"
                android:text="1" />
            <Button
                android:id="@+id/button2"
                style="@style/DialerButtonStyle"
                android:text="2" />
            <Button
                android:id="@+id/button3"
                style="@style/DialerButtonStyle"
                android:text="3" />
        </TableRow>

        <TableRow android:gravity="center">
            <Button
                android:id="@+id/button4"
                style="@style/DialerButtonStyle"
                android:text="4" />
            <Button
                android:id="@+id/button5"
                style="@style/DialerButtonStyle"
                android:text="5" />
            <Button
                android:id="@+id/button6"
                style="@style/DialerButtonStyle"
                android:text="6" />
        </TableRow>

        <TableRow android:gravity="center">
            <Button
                android:id="@+id/button7"
                style="@style/DialerButtonStyle"
                android:text="7" />
            <Button
                android:id="@+id/button8"
                style="@style/DialerButtonStyle"
                android:text="8" />
            <Button
                android:id="@+id/button9"
                style="@style/DialerButtonStyle"
                android:text="9" />
        </TableRow>

        <TableRow android:gravity="center">
            <Button
                android:id="@+id/button_star"
                style="@style/DialerSpecialButtonStyle"
                android:text="*" />
            <Button
                android:id="@+id/button0"
                style="@style/DialerButtonStyle"
                android:text="0" />
            <Button
                android:id="@+id/button_clear"
                style="@style/DialerSpecialButtonStyle"
                android:text="C" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button_call"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/keypad_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:paddingVertical="12dp"
        android:text="Call"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        app:cornerRadius="28dp"
        app:rippleColor="#8BC34A" />
</RelativeLayout>